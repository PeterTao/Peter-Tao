
import java.io.IOException;
import java.io.PrintWriter;
import java.net.Socket;
import java.util.Scanner;


public class Client {
	private Socket connect;
	
	public static void main(String[] args){
		new Client().init();
	}
	
	public void init(){
		createConnection();
		sendMSG();
		receiveMSG();
	}
	
	public void createConnection(){
		try{
			connect = new Socket("127.0.0.1",10000);
		}catch(IOException e){
			e.printStackTrace();
		}
	}
	public void sendMSG(){
		Scanner input = new Scanner(System.in);
		PrintWriter toServer;
		try{
			toServer = new PrintWriter(connect.getOutputStream());
			while(input.hasNext()){
				String MSG = input.next();
				toServer.println(MSG);
				toServer.flush();
			}

		}catch(IOException e){
			e.printStackTrace();
		}
	}

	public void receiveMSG(){
		try{
			Scanner fromServer = new Scanner(connect.getInputStream());	
			while(fromServer.hasNext()){
				System.out.println(fromServer.next());
			}
		}catch(IOException e){
			e.printStackTrace();
		}
		
		
	}
}
